pipeline {
  agent any
  stages {
    stage('Etape 1') {
      steps {
        echo 'Hello World'
      }
      post {
        always {
          echo 'Fin de l'Etape 1'
        }
      }
    }
    stage('Etape 2') {
      steps {
        sh 'exit 1'
        echo 'Hello world ! again'
      }
      post {
        failure {
          echo 'Echec de l'Ã©tape 2'
        }
      }
    }
  }
  post { 
    always { 
      echo 'I will always say Hello again!'
    }
  }
}
